# Configuration Base de Données
MONGO_URL=mongodb://localhost:27017
DB_NAME=anomalya_db

# Configuration Email (Optionnel - pour notifications de contact)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ADMIN_EMAIL=admin@anomalya.com

# Configuration API
API_TITLE=Anomalya Corp API
API_VERSION=1.0.0
DEBUG=true

# Configuration Sécurité
SECRET_KEY=your-super-secret-jwt-key-min-32-chars-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Configuration CORS
CORS_ORIGINS=["http://localhost:3000", "https://your-domain.com"]

# Configuration Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB en bytes

# Configuration Cache (Redis - Optionnel)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600  # 1 heure en secondes

# APIs Externes (Optionnel)
OPENAI_API_KEY=your-openai-key
STRIPE_SECRET_KEY=sk_test_your-stripe-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-key

# Configuration Email Marketing (Optionnel)
MAILCHIMP_API_KEY=your-mailchimp-key
MAILCHIMP_LIST_ID=your-list-id

# Configuration Analytics Backend
ANALYTICS_RETENTION_DAYS=365
ENABLE_DETAILED_LOGGING=true

# Configuration Développement
LOG_LEVEL=INFO
ENABLE_API_DOCS=true
API_PREFIX=/api